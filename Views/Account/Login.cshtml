@model Thoth.Web.Models.ViewModels.LoginViewModel

@{
    Layout = null; /* Desactivamos el Layout del Dashboard para esta vista */
    ViewData["Title"] = "Iniciar Sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Thoth</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <style>
        body {
            background-color: var(--th-bg); /* Gris claro */
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh; /* Ocupa toda la altura de la pantalla */

                /* --- CORRECCIÓN CLAVE --- */
            margin-left: 0 !important;  /* Anulamos el espacio del Sidebar */
            padding-top: 0 !important;  /* Anulamos el espacio del Topbar */
            padding-bottom: 0 !important;
        }
        .login-card {
            width: 100%;
            max-width: 400px; /* Ancho máximo elegante */
            border: none;
            border-radius: 12px; /* Bordes redondeados */
            box-shadow: 0 10px 25px rgba(0,0,0,0.05); /* Sombra suave */
        }
        .login-logo {
            width: 80px;
            height: 80px;
            object-fit: contain;
            margin-bottom: 1rem;
            /* Filtro opcional si quisieras que el logo rojo se vea gris, 
               pero mejor déjalo rojo original */
        }
        .btn-login {
            padding: 0.8rem;
            font-weight: 600;
            font-size: 1.1rem;
            letter-spacing: 0.5px;
        }
    </style>
</head>
<body>

    <div class="card login-card p-4 p-md-5">
        <div class="card-body">
            
            <div class="text-center mb-4">
                <img src="~/images/thoth-logo-completo.png" alt="Thoth Logo" class="login-logo" />
                <h2 class="fw-bold text-dark">Bienvenido</h2>
                <p class="text-muted small">Ingresa tus credenciales para acceder al sistema Thoth</p>
            </div>

            @if (TempData["Exito"] != null)
            {
                <div class="alert alert-success text-center mb-3">
                    @TempData["Exito"]
                </div>
            }
            
            <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center mb-3" role="alert"></div>

            <form asp-controller="Account" asp-action="Login" method="post">
                
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" placeholder="nombre@ejemplo.com" />
                    <label asp-for="Email">Correo Electrónico</label>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" />
                    <label asp-for="Password">Contraseña</label>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label text-muted small">Recuérdame</label>
                    </div>
                    </div>

                <button type="submit" class="btn btn-primary btn-login w-100 mb-3">
                    INGRESAR
                </button>

                <div class="text-center mt-4">
                    <p class="text-muted small mb-0">
                        ¿No tienes cuenta? 
                        <a asp-controller="Account" asp-action="Registro" class="fw-bold text-decoration-none" style="color: var(--th-primary);">
                            Solicitar acceso
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
</body>
</html>