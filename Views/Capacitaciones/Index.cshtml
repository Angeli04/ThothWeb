@model IEnumerable<Thoth.Web.Models.Capacitacion>

@{
    ViewData["Title"] = "Gestión de Capacitaciones";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-dark fw-bold mb-0">@ViewData["Title"]</h2>
            <p class="text-muted small mb-0">Administra los cursos y evaluaciones disponibles.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            + Nueva Capacitación
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            
            @if (!Model.Any())
            {
                <div class="text-center p-5">
                    <h5 class="text-muted">No hay capacitaciones registradas aún.</h5>
                    <p class="text-muted small">Comienza creando una nueva capacitación con el botón de arriba.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-secondary">
                            <tr>
                                <th class="ps-4">Título</th>
                                <th>Descripción</th>
                                <th>Fecha Creación</th>
                                <th class="text-center">Evaluación</th>
                                <th class="text-end pe-4">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-dark">@item.Titulo</td>
                                    <td>
                                        @if (item.Descripcion != null && item.Descripcion.Length > 50)
                                        {
                                            <span title="@item.Descripcion" style="cursor: help; border-bottom: 1px dotted #999;">
                                                @item.Descripcion.Substring(0, 50)...
                                            </span>
                                        }
                                        else
                                        {
                                            @item.Descripcion
                                        }
                                    </td>
                                    <td>@item.FechaCreacion.ToShortDateString()</td>
                                    <td class="text-center">
                                        @if (item.Evaluacion != null)
                                        {
                                            <span class="badge rounded-pill bg-success bg-opacity-10 text-success border border-success">
                                                Con Evaluación
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge rounded-pill bg-secondary bg-opacity-10 text-secondary border border-secondary">
                                                Solo Lectura
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary" title="Ver Detalles">
                                                Ver
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary" title="Editar">
                                                Editar
                                            </a>
                                            </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>