@model Thoth.Web.Models.ViewModels.EvaluacionCrearViewModel

@{
    ViewData["Title"] = "Crear Evaluación";
}

<div class="container-fluid">

    <div class="row justify-content-center mb-3">
        <div class="col-md-6 d-flex justify-content-between align-items-center">
            <h2 class="text-dark fw-bold mb-0 fs-4">Nueva Evaluación</h2>
            <a asp-controller="Capacitaciones" asp-action="Details" asp-route-id="@Model.CapacitacionId" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-x-lg"></i> Cancelar
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success bg-opacity-10 border-bottom py-3">
                    <h5 class="mb-0 fw-bold text-success">
                        <i class="bi bi-clipboard-check-fill me-2"></i>Configuración del Examen
                    </h5>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Crear">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <input type="hidden" asp-for="CapacitacionId" />
                        <input type="hidden" asp-for="CapacitacionTitulo" />

                        <div class="mb-4">
                            <small class="text-muted text-uppercase fw-bold">Curso Asociado</small>
                            <div class="d-flex align-items-center mt-1 p-2 bg-light rounded border">
                                <i class="bi bi-book text-primary me-2"></i>
                                <span class="fw-bold text-dark">@Model.CapacitacionTitulo</span>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Titulo" class="form-control" placeholder="Ej: Evaluación Final" />
                            <label asp-for="Titulo">Título del Examen</label>
                            <span asp-validation-for="Titulo" class="text-danger small"></span>
                        </div>

                        <div class="row g-2 align-items-center mb-4">
                            <div class="col-6">
                                <div class="form-floating">
                                    <input asp-for="NotaMinima" type="number" step="0.1" min="1.0" max="7.0" class="form-control" placeholder="4.0" />
                                    <label asp-for="NotaMinima">Nota Mínima</label>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="text-muted small lh-sm">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Nota requerida para aprobar (Ej: 4.0).
                                </div>
                            </div>
                            <span asp-validation-for="NotaMinima" class="text-danger small col-12"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success fw-bold py-2">
                                <i class="bi bi-check-lg me-2"></i> Guardar y Continuar
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>